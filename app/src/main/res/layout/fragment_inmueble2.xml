<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inmuebles.InmuebleFragment"
    android:fillViewport="true"
    android:background="@drawable/fondo_degradado">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivImagenInmueble"
            android:layout_width="279dp"
            android:layout_height="191dp"
            android:layout_marginBottom="184dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/bt_black"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/ivImagenInmueble"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAmbientes"
            android:layout_width="134dp"
            android:layout_height="34dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bt_black"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/Precio"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="137dp"
            android:layout_height="34dp"
            android:background="@drawable/bt_black"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/ivImagenInmueble"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toEndOf="@+id/tvDireccion"
            app:layout_constraintTop_toTopOf="@+id/tvDireccion"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="8dp"
            android:text="Ambientes"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvAmbientes"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/cbEstado"
            android:layout_width="136dp"
            android:layout_height="34dp"
            android:background="@drawable/bt_black"
            android:enabled="false"
            android:text="Disponible"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/ivImagenInmueble"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toEndOf="@+id/tvTipo"
            app:layout_constraintTop_toBottomOf="@+id/tvPrecio"
            app:layout_constraintVertical_bias="0.214" />

        <TextView
            android:id="@+id/Precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="8dp"
            android:text="Precio"
            android:textColor="#fFFFFFFf"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvPrecio"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvId"
            android:layout_width="126dp"
            android:layout_height="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bt_black"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toStartOf="@+id/tvAmbientes"
            app:layout_constraintHorizontal_bias="0.391"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            tools:layout_constraintStart_toEndOf="@id/guideline3" />

        <TextView
            android:id="@+id/tvDireccion"
            android:layout_width="131dp"
            android:layout_height="32dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bt_black"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/guideline3" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginBottom="4dp"
            android:text="Tipo"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/tvTipo"
            app:layout_constraintEnd_toStartOf="@+id/cbEstado"
            app:layout_constraintHorizontal_bias="0.206"
            app:layout_constraintStart_toStartOf="@+id/guideline3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="83dp"
            android:layout_height="18dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="8dp"
            android:text="Dirección"
            android:textColor="#fFFFFFFf"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvDireccion"
            app:layout_constraintStart_toStartOf="@+id/guideline3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="4dp"
            android:text="Código"
            android:textColor="#fFFFFFFf"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvId"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Información del inmueble"
            android:textColor="#2E2836"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/btDarBaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/ivImagenInmueble"
            app:layout_constraintVertical_bias="0.481" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>